<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="3" author="Milosz08">
        <dropColumn tableName="USER_STATS">
            <column name="REACTIONS_REMOVED" type="bigint">
                <constraints nullable="false"/>
            </column>
        </dropColumn>
        <addColumn tableName="USER_STATS">
            <column name="REACTIONS_DELETED" type="bigint">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="Milosz08">
        <dropColumn tableName="USER_STATS">
            <column name="MESSAGES_DELETED" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="REACTIONS_DELETED" type="bigint">
                <constraints nullable="false"/>
            </column>
        </dropColumn>
    </changeSet>

</databaseChangeLog>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="unsignedLongType" value="bigint unsigned" dbms="mysql,h2"/>
    <property name="floatType" value="float4" dbms="postgresql,h2"/>
    <property name="floatType" value="float" dbms="mysql,oracle"/>
    <property name="textType" value="text" dbms="mysql,postgresql"/>
    <property name="textType" value="varchar(1000000)" dbms="h2"/>

    <changeSet id="2023-04-08_00001_create-playlist-tables" author="milosz08" context="lq_dev, lq_prod">
        
        <createTable tableName="playlist_tracks">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="query" type="varchar(500)">
                <constraints nullable="false"/>
            </column>

            <column name="playlist_id" type="${unsignedLongType}">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="playlists">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_private" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="member_id" type="${unsignedLongType}">
                <constraints nullable="false"/>
            </column>
            <column name="guild_id" type="${unsignedLongType}">
                <constraints nullable="true"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="playlist_tracks" baseColumnNames="playlist_id"
                constraintName="fk_playlist_tracks_playlist_id"
                referencedTableName="playlists" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="playlists" baseColumnNames="member_id"
                constraintName="fk_playlists_member_id"
                referencedTableName="members" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="playlists" baseColumnNames="guild_id"
                constraintName="fk_playlists_guild_id"
                referencedTableName="guilds" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>

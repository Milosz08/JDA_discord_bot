<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="unsignedLongType" value="bigint unsigned" dbms="mysql,h2"/>
    <property name="floatType" value="float4" dbms="postgresql,h2"/>
    <property name="floatType" value="float" dbms="mysql,oracle"/>
    <property name="textType" value="text" dbms="mysql,postgresql"/>
    <property name="textType" value="varchar(1000000)" dbms="h2"/>

    <changeSet id="2023-04-08_00000_create-statistics-tables" author="milosz08" context="lq_dev, lq_prod">

        <createTable tableName="guilds">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="discord_id" type="varchar(18)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="guild_stats">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="messsages_deleted" type="${unsignedLongType}" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="reactions_deleted" type="${unsignedLongType}" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="guild_id" type="${unsignedLongType}">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="members">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="guild_nickname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="discord_id" type="varchar(18)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="member_stats">
            <column name="id" autoIncrement="${autoIncrement}" type="${unsignedLongType}">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="messages_sended" type="${unsignedLongType}" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="messages_updated" type="${unsignedLongType}" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="reactions_added" type="${unsignedLongType}" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="member_id" type="${unsignedLongType}">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="guild_id" type="${unsignedLongType}">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="timestamp" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp" defaultValueComputed="${now} ON UPDATE ${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="guild_stats" baseColumnNames="guild_id"
                constraintName="fk_guild_stats_guild_id"
                referencedTableName="guilds" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="member_stats" baseColumnNames="member_id"
                constraintName="fk_member_stats_member_id"
                referencedTableName="members" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="member_stats" baseColumnNames="guild_id"
                constraintName="fk_member_stats_guild_id"
                referencedTableName="guilds" referencedColumnNames="id"
                onUpdate="CASCADE" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>

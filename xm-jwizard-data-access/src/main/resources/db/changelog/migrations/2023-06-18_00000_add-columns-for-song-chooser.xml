<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="unsignedLongType" value="bigint unsigned" dbms="mysql,h2"/>
    <property name="floatType" value="float4" dbms="postgresql,h2"/>
    <property name="floatType" value="float" dbms="mysql,oracle"/>
    <property name="textType" value="text" dbms="mysql,postgresql"/>
    <property name="textType" value="varchar(1000000)" dbms="h2"/>

    <changeSet id="2023-06-18_00000_add-columns-for-song-chooser" author="milosz08" context="lq_dev, lq_prod">

        <addColumn tableName="guild_settings">
            <column name="time_to_select_song" type="integer" afterColumn="i18n_locale">
                <constraints nullable="true"/>
            </column>
            <column name="song_select_is_random" type="boolean" afterColumn="time_to_select_song">
                <constraints nullable="true"/>
            </column>
            <column name="song_choices_count" type="integer" afterColumn="song_select_is_random">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="other_commands">
            <column name="settchossng_enabled" type="boolean" defaultValue="true" afterColumn="settleavetr_enabled">
                <constraints nullable="false"/>
            </column>
            <column name="setrchossng_enabled" type="boolean" defaultValue="true" afterColumn="settchossng_enabled">
                <constraints nullable="false"/>
            </column>
            <column name="setcchossng_enabled" type="boolean" defaultValue="true" afterColumn="setrchossng_enabled">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>
</databaseChangeLog>
